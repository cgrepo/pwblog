<p id="notice"><%= notice %></p>

<h1>Listing Sub Targets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_targets.each do |sub_target| %>
      <tr>
        <td><%= sub_target.name %></td>
        <td><%= link_to 'Show', sub_target %></td>
        <td><%= link_to 'Edit', edit_sub_target_path(sub_target) %></td>
        <td><%= link_to 'Destroy', sub_target, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

