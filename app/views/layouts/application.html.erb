<!DOCTYPE html>
<html>
<head>
  <title>PWbL0g</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <script src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="myheader">
    <div class="container be-round_ligth_gray">
      <div class="row">
        <div class="col-xs col-md-12">
          <% if logged_in? %>
             <span class="pull-left label label-primary">
              usuario [ <%= current_user.name.upcase %> ]
            </span>
            <span class="pull-right">
             	<%= link_to "Logout", logout_path, method: :delete, class:'label label-danger ' %>
            </span>
            
          <% end %>
          <% flash.each do |key, value| %>
             <p id='<%= key %>'><%= value %></p>
          <% end %>
          <%#= logged_in? %>
        </div>
      </div>
    </div>
  </section>
  <div class='container be-round_ligth_gray'>
    <div class='row'>
      <div class='col-xs-12 col-md-12'>
        
        <%= link_to ' ISSUES', issues_path, class:'btn btn-default btn-sm btn-transparent '%>
        <%= link_to ' ICCORRECTS', icorrections_path, class:'btn btn-default btn-sm btn-transparent ' %>
        <%= link_to ' ERRBRANDS', err_brands_path, class:'btn btn-default btn-sm btn-transparent ' %>
        <%= link_to ' REMINDERS', p_reminders_path, class:'btn btn-default btn-sm btn-transparent ' %>
        <%= link_to ' CODE_TASKS', code_tasks_path, class:'btn btn-default btn-sm btn-transparent ' %>
      </div>
    </div>
  </div>

  <%= yield %>

</body>
</html>
