<%= bootstrap_form_for(@code_task) do |f| %>
  <% if @code_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@code_task.errors.count, "error") %> prohibited this code_task from being saved:</h2>

      <ul>
      <% @code_task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='container be-round_ligth_gray'>
  <div class='row'>
    <div class='col-xs col-md-2'>
      <%= f.select_with_bootstrap :codebranch, [['PWBLOG'],['DISPOSE'],['ACTIVEINVENTORY'], ['BIBLIOS'],['SS'] ],{:include_blank => false},  
          {class:'btn btn-default dropdown-toggle smfont'} %>
    </div>
    <div class="col-xs col-md-4">
      <%= f.text_field_with_bootstrap :title, class:'form-control' %>
    </div>
  </div>
  <div class='row'>
    <div class="col-xs col-md-6">
      <%= f.text_area_with_bootstrap :description, class:'form-control', rows:5 %>
    </div>
  </div>
  <div class='row'>
    <div class="col-xs col-md-1">
      <%= f.check_box_with_bootstrap :done, class:'check_box' %>
    </div>
    <div class="col-xs col-md-2">
      <%= f.collection_select_with_bootstrap :user_id, User.all, :id, :name,
        {:include_blank => true }, {class:'btn btn-default dropdown-toggle'} %>
    </div>
    <div class='col-xs col-md-3'>
      <br>
      <%= f.submit 'save', class:'btn btn-default btn-md btn-block' %>
    </div>
  </div>
</div>
<% end %>
