<%= form_for(@icorrection) do |f| %>
  <% if @icorrection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@icorrection.errors.count, "error") %> prohibited this icorrection from being saved:</h2>

      <ul>
      <% @icorrection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-xs col-md-4">
        <%= f.label :title %><br>
        <%= f.text_field :title, class:'form-control ' %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :Tipo %><br>  
        <%= f.select :genus, [ ['EXECUTION'],['ZONEF'], ['SYSO'], ['ISABI'], ['TTO'] ], 
        {:include_blank => true},  {class:'btn btn-default dropdown-toggle smfont'} %>
      </div>
      <div class="col-xs col-md-2">
        <%= f.label :User_id %><br>
        <%= f.collection_select :User_id, User.all, :id, :name,
        {:include_blank => true }, {class:'btn btn-default dropdown-toggle'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-8">
        <%= f.label :description %><br>
        <%= f.text_area :description, size:'105x3' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-2">
        <%= f.submit class:'btn btn-warning btn-lb' %>
      </div>
    </div>
  </div>
<% end %>
